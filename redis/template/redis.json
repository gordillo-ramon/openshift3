{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "redis-production",
    "creationTimestamp": null,
    "annotations": {
      "description": "Redis Production",
      "iconClass": "icon-redis",
      "tags": "database,redis,replication"
    }
  },
  "parameters": [
    {
      "name": "REDIS_SERVICE_NAME",
      "description": "Redis Service Name",
      "value": "redis",
      "required": true
    },
    {
      "name": "REDIS_REQUIREPASS",
      "description": "Login Password",
      "generate": "expression",
      "from": "[a-f0-9]{8}"
    },
    {
      "name": "REDIS_MAXCLIENTS",
      "description": "Max Connections",
      "value": "10000"
    },
    {
      "name": "REDIS_MAXMEMORY",
      "description": "Max memory for Redis server",
      "value": "0"
    },
    {
      "name": "TZ",
      "description": "Timezone",
      "value": "CET"
    }
  ],
  "objects": [
    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "name": "${REDIS_SERVICE_NAME}",
        "labels": {
          "name":"${REDIS_SERVICE_NAME}" 
        }
      },
      "spec": {
        "ports": [
          {
            "protocol": "TCP",
            "port": 6379,
            "targetPort": 6379,
            "nodePort": 0
          }
        ],
        "selector": {
          "name": "${REDIS_SERVICE_NAME}"
        },
        "portalIP": "None",
        "type": "ClusterIP",
        "sessionAffinity": "None"
      },
      "status": {
        "loadBalancer": {}
      }
    },
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${REDIS_SERVICE_NAME}",
        "creationTimestamp": null
      },
      "spec": {
        "strategy": {
          "type": "Recreate",
          "resources": {}
        },
        "triggers": [
          {
            "type": "ConfigChange"
          }
        ],
        "replicas": 1,
        "selector": {
          "name": "${REDIS_SERVICE_NAME}"
        },
        "template": {
          "metadata": {
            "creationTimestamp": null,
            "labels": {
              "name": "${REDIS_SERVICE_NAME}"
            }
          },
          "spec": {
            "containers": [
              {
                "name": "server",
                "image": "openshift/redis-30-rhel7",
                "args": [
                  "redis-server",
                  "/tmp/redis.conf"
                ],
                "ports": [
                  {
                    "containerPort": 6379,
                    "protocol": "TCP"
                  }
                ],
                "env": [
                  {
                    "name": "REDIS_REQUIREPASS",
                    "value": "${REDIS_REQUIREPASS}"
                  },
                  {
                    "name": "REDIS_MAXCLIENTS",
                    "value": "${REDIS_MAXCLIENTS}"
                  },
                  {
                    "name": "REDIS_MAXMEMORY",
                    "value": "${REDIS_MAXMEMORY}"
                  },
                  {
                    "name": "TZ",
                    "value": "${TZ}"
                  }
                ],
                "resources": {},
                "terminationMessagePath": "/dev/termination-log",
                "imagePullPolicy": "IfNotPresent",
                "securityContext": {
                  "capabilities": {},
                  "privileged": false
                }
              }
            ],
            "restartPolicy": "Always",
            "dnsPolicy": "ClusterFirst"
          }
        }
      },
      "status": {}
    }
  ]
}
